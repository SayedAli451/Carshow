<%- include('../partials/head') %>
<% if (cars.length === 0) { %>
    <div class="col-12 text-center">
        <p class="alert">"Your car is empty"</p>
    </div>
<% } else { %>
    <div class="container">
        <h1 class="form-title text-center mb-4">My Cars</h1>
        <div class="card-container">
            <% cars.forEach((car) => { %>
                <div class="card">
                    <img src="<%= car.image.url %>" class="card-img-top" alt="listing for <%= car.model %>">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= car.model %></h5>
                        <p class="card-text">Year: <%= car.year %></p>
                        <p class="card-text">Phone Number: +973 <%= car.phoneNumber %></p>
                        <p class="card-text">Price: <%= car.price %> BD</p>
                        <p class="card-text">Mileage: <%= car.mileage %> KM</p>
                        <p class="card-text">Description: <%= car.description %></p>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="button-group">
                                <form action="/carshow/<%= user._id %>/<%= car._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                <a href="/carshow/<%= user._id %>/<%= car._id %>/edit" class="btn btn-warning">Edit</a>
                            </div>
                            <div class="status-badge">
                                <% if (car.status === 'Available') { %>
                                    <span class="badge bg-warning"><%= car.status %></span>
                                <% } else if (car.status === 'Sold') { %>
                                    <span class="badge bg-danger"><%= car.status %></span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
<% } %>
<%- include('../partials/footer') %>